<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Quick settings tiles columns and rows config -->
    <integer name="config_qs_num_rows_landscape_default">2</integer>

    <!-- EdgeGesture service -->
    <java-symbol type="dimen" name="edge_gesture_trigger_distance" />
    <java-symbol type="dimen" name="edge_gesture_perpendicular_distance" />
    <java-symbol type="dimen" name="edge_gesture_trigger_thickness" />

    <!-- Whether doze feature is enabled by default in settings. -->
    <bool name="config_doze_enabled_by_default">false</bool>

    <!-- True if the notifications should dynamically tint the app icon and app title -->
    <bool name="config_allowNotificationIconTextTinting">true</bool>

    <!-- Whether doze should invert colors for notifications. If the RRO theme causes
    the NORMAL notification background to be dark and the text to be light, this boolean
    needs to be set to false, to prevent the doze notifications from being light -->
    <bool name="config_invert_colors_on_doze">true</bool>
    
    <!-- Default value for led color when battery is really fully charged -->
    <integer name="config_notificationsBatteryReallyFullARGB">0xFF00FF00</integer>

    <bool name="single_hand_mode">true</bool>

    <!-- These are the various interesting memory levels that we will give to
         the OOM killer.  Note that the OOM killer only supports 6 slots, so we
         can't give it a different value for every possible kind of process.
         Values are defined on
         services/core/java/com/android/server/am/ProcessList.java as follows:
            FOREGROUND_APP_ADJ = 0;
            VISIBLE_APP_ADJ = 1;
            PERCEPTIBLE_APP_ADJ = 2;
            BACKUP_APP_ADJ = 3;
            HEAVY_WEIGHT_APP_ADJ = 4;
            SERVICE_ADJ = 5;
            HOME_APP_ADJ = 6;
            PREVIOUS_APP_ADJ = 7;
            SERVICE_B_ADJ = 8;
            CACHED_APP_MIN_ADJ = 9;
            CACHED_APP_MAX_ADJ = 15; -->
    <integer-array translatable="false" name="config_defaultOomAdj">
        <item>0</item>
        <item>1</item>
        <item>2</item>
        <item>3</item>
        <item>9</item>
        <item>15</item>
    </integer-array>

    <!-- Device configuration setting the default value of lowmemorykiller.
         These are the low-end OOM level limits for 32 bit device.
         This is appropriate for an HVGA or smaller phone with less than 512MB.
         Values are in KB. -->
    <integer-array translatable="false" name="config_defaultOomMinFreeLow32">
        <item>12288</item>
        <item>18432</item>
        <item>24576</item>
        <item>36864</item>
        <item>43008</item>
        <item>49152</item>
    </integer-array>

    <!-- Device configuration setting the default value of lowmemorykiller.
         These are the high-end OOM level limits for 32 bit device.
         This is appropriate for a 1280x800 or larger screen with around 1GB RAM.
         Values are in KB. -->
    <integer-array translatable="false" name="config_defaultOomMinFreeHigh32">
        <item>73728</item>
        <item>92160</item>
        <item>110592</item>
        <item>129024</item>
        <item>147456</item>
        <item>184320</item>
    </integer-array>

    <!-- Device configuration setting the default value of lowmemorykiller.
         These are the low-end OOM level limits for 64 bit device.
         This is appropriate for an HVGA or smaller phone with less than 512MB.
         Values are in KB. -->
    <integer-array translatable="false" name="config_defaultOomMinFreeLow64">
        <item>12288</item>
        <item>18432</item>
        <item>24576</item>
        <item>36864</item>
        <item>43008</item>
        <item>49152</item>
    </integer-array>

    <!-- Device configuration setting the default value of lowmemorykiller.
         These are the high-end OOM level limits for 64 bit device.
         This is appropriate for a 1280x800 or larger screen with around 1GB RAM.
         Values are in KB. -->
    <integer-array translatable="false" name="config_defaultOomMinFreeHigh64">
        <item>73728</item>
        <item>92160</item>
        <item>110592</item>
        <item>129024</item>
        <item>221184</item>
        <item>322560</item>
    </integer-array>
</resources>
